{
     // Asigne un nombre a esta configuración
     "name": "¡Codespace para aptitudes!",
     // Usar la imagen del codespace base
     "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",

     "remoteUser": "codespace",
     "overrideCommand": false,
     
    // Agregue los identificadores de las extensiones que desea instalar cuando se crea el contenedor.
    "Personalizaciones": {
        "vscode": {
            "extensiones": [
                "GitHub.copilot"
            ]
        },
        "codespaces": {
            "openFiles": [
                "codespace.md"
            ]
        }
    }
   }
